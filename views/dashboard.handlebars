

<main class="container my-4">
  <div class="row">
    <div class="col-12 col-md-6">
      <h2>My Posts</h2>
      <ul class="list-group">
        {{#each posts}}
        <li class="list-group-item">
          <h3>{{title}}</h3>
          <small>Created on {{createdAt}}</small>
          <p>{{content}}</p>
          <a href="/posts/edit/{{id}}" class="btn btn-sm btn-secondary">Edit</a>
          <a href="/posts/delete/{{id}}" class="btn btn-sm btn-danger">Delete</a>
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="col-12 col-md-6">
      <h2>Create a Post</h2>
      <form id="new-post-form">
        <div class="form-group">
          <label for="post-title">Title</label>
          <input type="text" class="form-control" id="new-post-title" name="title" required>
        </div>
        <div class="form-group">
          <label for="post-content">Content</label>
          <textarea class="form-control" id="new-post-content" name="content" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>
  </div>
</main>

<script src="js/singlePost.js"></script>